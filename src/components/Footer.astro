---
import GitHub from "../assets/github.svg";
import Instagram from "../assets/instagram.svg";
import Linkedin from "../assets/linkedin.svg";
const socials = [
  { name: "GitHub", icon: GitHub, url: "https://github.com/GFGxMGMU" },
  {
    name: "Instagram",
    icon: Instagram,
    url: "https://www.instagram.com/gfgmgmu/",
  },
  {
    name: "Linkedin",
    icon: Linkedin,
    url: "https://in.linkedin.com/company/geeksforgeeks-jnec",
  },
];
---

<style>
  .footer {
    margin: 0;
    width: 100%;
    height: 15vh;
    position: fixed;
    display: flex;
    top: 85vh;
    background-color: #105fcd00;
    padding: 0;
    justify-content: center;
    align-items: center;
    flex-flow: row wrap;
    gap: 2.5em;
    backdrop-filter: blur(4px);
  }
  .icon {
    height: 2em;
    width: auto;
  }
  .icon:hover {
    transform: scale(1.2);
  }
  ul {
    display: flex;
    padding: 0;
    justify-content: center;
    align-items: center;
    flex-flow: row wrap;
    gap: 2em;
    margin: 0;
  }
  li {
    list-style: none;
  }
  a {
    height: max-content;
  }
</style>
<div class="footer">
  <ul>
    {
      socials.map((social) => (
        <li>
          <a href={social.url}>
            <img class="icon" src={social.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</div>
